datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Trader {
  apiKey    String?
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  name      String?
  trades    Trade[]
  updatedAt DateTime @updatedAt
}

model Trade {
  amount    Float?
  createdAt DateTime  @default(now())
  id        String    @id @default(cuid())
  timestamp DateTime?
  tradeId   String?
  trader    Trader?   @relation(fields: [traderId], references: [id])
  traderId  String?
  updatedAt DateTime  @updatedAt
  user      User?     @relation(fields: [userId], references: [id])
  userId    String?
}

model User {
  apiKey    String?
  createdAt DateTime @default(now())
  email     String?  @unique
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  traderIds String?
  trades    Trade[]
  updatedAt DateTime @updatedAt
  username  String   @unique
}
